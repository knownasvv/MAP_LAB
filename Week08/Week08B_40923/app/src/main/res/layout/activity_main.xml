<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/default_background"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="200sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCounter">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/hitam"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="gantiBackground"
                android:text="@string/hitam"
                android:textColor="@color/white"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/merah"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="gantiBackground"
                android:text="@string/merah"
                android:textColor="@color/white"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/biru"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="gantiBackground"
                android:text="@string/biru"
                android:textColor="@color/white"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/hijau"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="gantiBackground"
                android:text="@string/hijau"
                android:textColor="@color/white"
                app:cornerRadius="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/default_background"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="tambahCounter"
                android:text="@string/tambah"
                android:textColor="@color/hitam" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/default_background"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="reset"
                android:text="@string/reset"
                android:textColor="@color/hitam" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>